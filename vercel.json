{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "api/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "api/package.json",
        "use": "@vercel/node",
        "config": { "zeroConfig": true }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/index.php"
      }
    ],
    "installCommand": "cd api && composer install && npm install",
    "buildCommand": "cd api && npm run prod"
  }